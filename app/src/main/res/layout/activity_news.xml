<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NewsActivity"
    tools:deviceIds="tv">
    <data>
        <variable name="news" type="test.readingthenewsonandroidtv.model.News"/>
        <variable name="imageUrl" type="String"/>
        <variable name="credits" type="String"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/fastlane_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".02" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".50" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".02" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".98 " />

        <ImageView
            android:id="@+id/photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:newsImage="@{imageUrl}"
            app:layout_constraintStart_toStartOf="@id/guideline_center"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/menu"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@color/lb_guidedactions_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="@{news.title}"
            android:textColor="#ffffff"
            android:textSize="28sp"
            app:layout_constraintStart_toEndOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/guideline_top"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".46" />

        <TextView
            android:id="@+id/article"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:text="@{news.article}"
            android:textColor="#ffffff"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".46" />

        <TextView
            android:id="@+id/sources"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:text="@{credits}"
            android:textColor="#ffffff"
            android:textSize="19sp"
            app:layout_constraintBottom_toTopOf="@id/menu"
            app:layout_constraintStart_toEndOf="@id/guideline_start"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".46" />

        <Button
            android:id="@+id/button1"
            style="?attr/detailsActionButtonStyle"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintTop_toTopOf="@+id/menu" />

        <Button
            android:id="@+id/button2"
            style="?attr/detailsActionButtonStyle"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="@string/add_favorite"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/button1"
            app:layout_constraintTop_toTopOf="@+id/menu" />

        <Button
            android:id="@+id/button3"
            style="?attr/detailsActionButtonStyle"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="@string/external_link"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button4"
            app:layout_constraintStart_toEndOf="@+id/button2"
            app:layout_constraintTop_toTopOf="@+id/menu" />

        <Button
            android:id="@+id/button4"
            style="?attr/detailsActionButtonStyle"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button3"
            app:layout_constraintTop_toTopOf="@+id/menu" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>